<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allRecipes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8FFFFFF"
    tools:context=".ui.recipes.RecipesFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tint="#0000"
        app:backgroundTint="#6200EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:maxImageSize="30sp"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <Button
        android:id="@+id/button5"
        android:layout_width="284dp"
        android:layout_height="145dp"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:background="#00E4E4E4"
        android:textColor="#00FFFFFF"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_title" />

    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="228dp"
        android:layout_height="57dp"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:fontFamily="@font/lato"
        android:text="4 Recipes Found"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/attribute4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="American"
        app:layout_constraintStart_toEndOf="@+id/attribute3"
        tools:layout_editor_absoluteY="259dp" />

    <TextView
        android:id="@+id/attribute3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Breakfast"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/button5"
        tools:layout_editor_absoluteX="91dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="208dp"
        android:layout_height="52dp"
        android:fontFamily="@font/roboto_light"
        android:text="Ham and Cheese Omelette"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="173dp" />

    <ListView
        android:id="@+id/recipeList"
        android:layout_width="99dp"
        android:layout_height="583dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="146dp" />

</androidx.constraintlayout.widget.ConstraintLayout>